# Device Configuration
DEVICE_TYPE=socket          # "serial" or "socket"
SERIAL_PORT=COM7           # Only used when DEVICE_TYPE=serial
SOCKET_ADDRESS=127.0.0.1:9001  # Only used when DEVICE_TYPE=socket
BAUD_RATE=115200           # Serial port baud rate

# Web Server Configuration
WEB_HOST=127.0.0.1
WEB_PORT=8080

# WebSocket Configuration
WS_HOST=127.0.0.1
WS_PORT=8081

# File Storage Configuration
DATA_DIR=./data
FILE_PREFIX=wave
FILE_EXT=.bin
MAX_FILES=200

# Logging Configuration
RUST_LOG=info              # debug, info, warn, error